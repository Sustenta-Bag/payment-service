{
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.js"],
  "setupFilesAfterEnv": ["./tests/setup.js"],
  "testTimeout": 30000,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js",
    "!src/config/**/*.js"
  ],  "coverageReporters": ["text", "lcov"]
}
